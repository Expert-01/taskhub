# Example environment variables for TaskHub backend
# Copy to .env and set real values

# Postgres connection string (optional) e.g.
 #DATABASE_URL=postgres://postgres:password@localhost:5432/taskhub
DATABASE_URL=postgresql://postgres:divine@localhost:5432/taskhub

# or individual values:
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=divine
PGDATABASE=taskhub

# JWT secret for signing tokens
JWT_SECRET=replace-this-with-a-strong-secret

# Bcrypt salt rounds (optional)
BCRYPT_SALT_ROUNDS=10

# App port (optional)
PORT=4000
